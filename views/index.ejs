<%- include('partials/html-head') %>

<body class="container-fluid bg-light py-5">

  <div class="row justify-content-center">

    <!-- Update Profile Section -->
    <div class="col-md-6 mb-5">
      <h1 class="mb-4">Update your Profile Name</h1>

      <% for (var i = 0; i < profileData.length; i++) { %>
        <form method="POST" class="mb-3">
          <div class="mb-3">
            <input type="hidden" id="devId" name="devId" value="<%= profileData[i]._id %>" />
            <input type="text" class="form-control" id="devName" name="devName" value="<%= profileData[i].name %>" />
          </div>
          
          <button class="btn btn-primary me-2" type="submit" formaction="/updateProfile">Update Dev Name</button>
          <button class="btn btn-warning" type="submit" formaction="/deleteProfile">Delete Dev</button>
        </form>
      <% } %> 
    </div>

    <!-- Insert New Profile Section -->
    <div class="col-md-6">
      <h2 class="mb-4">New dev here!</h2>

      <form action="/insertProfile" method="POST">
        <div class="mb-3">
          <input type="text" class="form-control" id="newDevName" name="newDevName" placeholder="Enter new dev name" />
        </div>
        <button class="btn btn-primary" type="submit">Insert New Dev Name</button>
      </form>
    </div>
    
  </div>

</body>
</html>
